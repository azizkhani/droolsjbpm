  <artifactId>drools-jbrms</artifactId>

  <packaging>war</packaging>
  <name>Drools :: Business Rule Management System</name>

  <build>
    <finalName>drools-jbrms</finalName>
  </build>

  <repositories>
    <repository>
      <id>basedir</id>
      <url>file://${basedir}/../repository</url>
    </repository>
  </repositories> 

  <dependencies>
    <!-- Internal dependencies -->
    <!-- first the deps for the repo API itself (Jackrabbit based) -->
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>drools-repository</artifactId>
    </dependency>
    <dependency>
      <groupId>org.drools</groupId>
      <artifactId>drools-repository</artifactId>
      <type>test-jar</type>
    </dependency>

    <!-- External dependencies -->
    <!-- now the deps for the repo web app -->
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>
    <dependency>
      <groupId>google</groupId>
      <artifactId>gwt-servlet</artifactId>
    </dependency>
  </dependencies>

</project>
